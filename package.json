{
  "name": "pdd-trainer-bot",
  "version": "1.0.0",
  "description": "Telegram Bot for PDD (Russian driving theory) training",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "node bot.js",
    "cluster:native": "node cluster.js",
    "cluster": "pm2 start ecosystem.config.js",
    "cluster:stop": "pm2 stop pdd-trainer-bot",
    "cluster:delete": "pm2 delete pdd-trainer-bot",
    "cluster:logs": "pm2 logs pdd-trainer-bot",
    "cluster:status": "pm2 status pdd-trainer-bot",
    "generate-questions": "node scripts/generateQuestions.js",
    "health": "curl -s http://localhost:3000/health | node -e \"const d=require('fs').readFileSync(0,'utf8');console.log(JSON.parse(d))\"",
    "stats": "curl -s http://localhost:3000/stats | node -e \"const d=require('fs').readFileSync(0,'utf8');console.log(JSON.parse(d))\""
  },
  "keywords": [
    "telegram",
    "bot",
    "pdd",
    "driving",
    "russia",
    "training"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bull": "^4.12.2",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
